<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AULA04.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout>
        <HorizontalStackLayout Spacing="10" Margin="10">
            <Image Source="dotnet_bot.png"
                                    SemanticProperties.Description="The dotnet waving hello"
                                    HeightRequest="64" />
            <Label FontSize="22" FontAttributes="Bold" Text="Notes" VerticalOptions="End" />
            <Label FontSize="22" FontAttributes="Bold" Text="v1.0" VerticalOptions="End" />
        </HorizontalStackLayout>
        <Button Text="learn more.." Clicked="LearnMore_Clicked"/>
    </VerticalStackLayout>
</ContentPage>